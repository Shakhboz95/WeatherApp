<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clipToPadding="false"
    android:weightSum="1"
    >

    <android.support.design.card.MaterialCardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardElevation="1dp"
        android:layout_margin="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/city_temp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="22dp"
        android:text="Tashkent"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/weather_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/city_name"
        android:layout_centerVertical="true"
        android:text="Clear"
        android:textColor="#000"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/city_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/city_name"
        android:layout_marginEnd="28dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/city_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/city_icon"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:gravity="end"
        android:text="ÂºC"
        android:textColor="#000"
        android:textSize="22sp" />
        </RelativeLayout>
    </android.support.design.card.MaterialCardView>
</LinearLayout>